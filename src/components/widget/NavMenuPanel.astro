---
import { Icon } from "astro-icon/components";
import { type NavBarLink } from "../../types/config";
import { url } from "../../utils/url-utils";

interface Props {
	links: NavBarLink[];
}

const links = Astro.props.links;
---
<div id="nav-menu-panel" class:list={["float-panel float-panel-closed absolute transition-all fixed right-4 px-2 py-2"]}>
	{links.map((link) => {
		const hasChildren = link.children && link.children.length > 0;
		
		if (hasChildren) {
			return (
				<div class="nav-menu-item-group">
					<a href={link.external ? link.url : url(link.url)} 
					   class="group flex justify-between items-center py-2 pl-3 pr-1 rounded-lg gap-8 hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition"
					   target={link.external ? "_blank" : null}
					   data-has-children="true"
					>
						<div class="transition text-black/75 dark:text-white/75 font-bold group-hover:text-[var(--primary)] group-active:text-[var(--primary)]">
							{link.name}
						</div>
						<Icon name="material-symbols:chevron-right-rounded"
						      class="transition text-[1.25rem] text-[var(--primary)] nav-menu-chevron"
						></Icon>
					</a>
					<div class="nav-menu-children hidden ml-4">
						{link.children.map((child) => (
							<a href={child.external ? child.url : url(child.url)} 
							   class="group flex justify-between items-center py-2 pl-7 pr-1 rounded-lg gap-8 hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition"
							   target={child.external ? "_blank" : null}
							>
								<div class="transition text-black/75 dark:text-white/75 font-bold group-hover:text-[var(--primary)] group-active:text-[var(--primary)]">
									{child.name}
								</div>
								{!child.external && <Icon name="material-symbols:chevron-right-rounded"
								      class="transition text-[1.25rem] text-[var(--primary)]"
								></Icon>}
								{child.external && <Icon name="fa6-solid:arrow-up-right-from-square"
								      class="transition text-[0.75rem] text-black/25 dark:text-white/25 -translate-x-1"
								></Icon>}
							</a>
						))}
					</div>
				</div>
			);
		}
		
		return (
			<a href={link.external ? link.url : url(link.url)} 
			   class="group flex justify-between items-center py-2 pl-3 pr-1 rounded-lg gap-8 hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition"
			   target={link.external ? "_blank" : null}
			>
				<div class="transition text-black/75 dark:text-white/75 font-bold group-hover:text-[var(--primary)] group-active:text-[var(--primary)]">
					{link.name}
				</div>
				{!link.external && <Icon name="material-symbols:chevron-right-rounded"
				      class="transition text-[1.25rem] text-[var(--primary)]"
				></Icon>}
				{link.external && <Icon name="fa6-solid:arrow-up-right-from-square"
				      class="transition text-[0.75rem] text-black/25 dark:text-white/25 -translate-x-1"
				></Icon>}
			</a>
		);
	})}
</div>

<style>
	.nav-menu-item-group[data-has-children="true"]:has(.nav-menu-chevron:hover) .nav-menu-children,
	.nav-menu-item-group[data-has-children="true"]:has(a:hover) .nav-menu-children {
		display: block;
	}
</style>

<script>
	// モバイルメニューで子メニューをトグルする
	document.addEventListener('DOMContentLoaded', () => {
		const menuPanel = document.getElementById('nav-menu-panel');
		if (!menuPanel) return;
		
		menuPanel.addEventListener('click', (e) => {
			const target = e.target as HTMLElement;
			const itemGroup = target.closest('.nav-menu-item-group[data-has-children="true"]');
			if (itemGroup) {
				const children = itemGroup.querySelector('.nav-menu-children');
				const chevron = itemGroup.querySelector('.nav-menu-chevron');
				if (children && chevron && target.closest('a')) {
					e.preventDefault();
					children.classList.toggle('hidden');
					chevron.classList.toggle('rotate-90');
				}
			}
		});
	});
</script>
